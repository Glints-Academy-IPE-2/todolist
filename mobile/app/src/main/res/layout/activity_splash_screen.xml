<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashScreen"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/iv_logo_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_todolist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Todolist"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_splash_screen"
        app:layout_constraintStart_toStartOf="@id/iv_logo_splash_screen"
        app:layout_constraintEnd_toEndOf="@id/iv_logo_splash_screen" />
</androidx.constraintlayout.widget.ConstraintLayout>