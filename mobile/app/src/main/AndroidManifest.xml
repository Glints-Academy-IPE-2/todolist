<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chessporg.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Todolist"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.usertodos.UserTodoActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">

        </activity>
        <activity
            android:name=".ui.signupsuccess.SignUpSuccessActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".ui.emailresetpassword.EmailResetPasswordActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".ui.forgotpassword.ForgotPasswordActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">

        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">

        </activity>
        <activity
            android:name=".ui.splash.SplashScreen"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>